// 4.4.2.3_try_this_1 for_statements
#include <iostream>
#include <string>

int main()
{
    
int i;
char letter = 'A';

for (i = 97; i<123; ++i,++letter)  
    std::cout << letter << ' ' << i << '\n';

}

